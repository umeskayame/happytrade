<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>
      
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <%= render 'shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %>
          <span class="indispensable">必須</span>
          <br><%= f.text_field :nickname, id:"nickname" %>
        </div>
        
        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <span class="indispensable">必須</span>
          <br><%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %>
          <span class="indispensable">必須</span>
          <br><%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認)" %>
          <span class="indispensable">必須</span>
          <br><%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field_favorire">
          <%= f.label :favorite, "好きなもの" %><br />
          <%= f.text_area :favorite, class: :form__text, id:"favorite", placeholder:"好きなキャラクターやアイドルなどを入力してください★" %>
        </div>

        <div class="form-group">
          <p class='form-info-header'>
            本人確認
          </p>
          <p class='form-info-text'>
            安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。<br>他のお客さまに公開されることはありません。
          </p>
        </div>
  
        <div class="field_name">
          <label class="form-text">お名前(全角)</label>
          <span class="indispensable">必須</span>
        </div>
    
        <div class="field">
          <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 交換" %>
          <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) はな子" %>
        </div>
  
        <div class="field">
          <label class="form-text">お名前カナ(全角)</label>
          <span class="indispensable">必須</span>
        </div>
    
        <div class="field">
          <%= f.text_area :kana_last_name, class:"input-name", id:"last-name-kana", placeholder:"例) コウカン" %>
          <%= f.text_area :kana_first_name, class:"input-name", id:"first-name-kana", placeholder:"例) ハナコ" %>
        </div>
  
        <div class="field">
          <label class="form-text">生年月日</label>
          <span class="indispensable">必須</span>
        </div>
        
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>" , "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>

        <div class='register-btn'>
          <%= f.submit "会員登録" ,class:"register-red-btn" %>
        </div>
        <% end %>
    </div>
  </div>
</div>