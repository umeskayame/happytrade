<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>
      
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <%= render 'shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %>
          <span class="indispensable">必須</span>
          <br><%= f.text_field :nickname, id:"nickname" %>
        </div>
        
        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <span class="indispensable">必須</span>
          <br><%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %>
          <span class="indispensable">必須</span>
          <br><%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認)" %>
          <span class="indispensable">必須</span>
          <br><%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field_favorire">
          <%= f.label :favorite, "好きなもの" %><br />
          <%= f.text_area :favorite, class: :form__text, id:"favorite", placeholder:"好きなキャラクターやアイドルなどを入力してください★" %>
        </div>

        <div class="form-group">
          <p class='form-info-header'>
            本人確認
          </p>
        </div>
  
        <div class="field_name">
          <label class="form-text">お名前(全角)</label>
          <span class="indispensable">必須</span>
        </div>
    
        <div class="field">
          <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 交換" %>
          <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) はな子" %>
        </div>
  
        <div class="field">
          <label class="form-text">お名前カナ(全角)</label>
          <span class="indispensable">必須</span>
        </div>
    
        <div class="field">
          <%= f.text_area :kana_last_name, class:"input-name", id:"last-name-kana", placeholder:"例) コウカン" %>
          <%= f.text_area :kana_first_name, class:"input-name", id:"first-name-kana", placeholder:"例) ハナコ" %>
        </div>

        <div class='form-text-wrap'>
          <label class="form-text">郵便番号</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :postcode, class:"input-default", id:"postal-code", placeholder:"例）123-4567", maxlength:"8" %>
  
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">都道府県</label>
            <span class="indispensable">必須</span>
          </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
        </div>
      
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">市区町村</label>
            <span class="indispensable">必須</span>
          </div>
        <%= f.text_field :city, class:"input-default", id:"city", placeholder:"例）横浜市緑区"%>
        </div>
      
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">番地</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :house_number, class:"input-default", id:"addresses", placeholder:"例）青山1-1-1"%>
        </div>
      
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">建物名</label>
          </div>
          <%= f.text_field :building, class:"input-default", id:"building", placeholder:"例）柳ビル103"%>
        </div>
      
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">電話番号</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :phone, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
        </div>
  
        <div class="field">
          <label class="form-text">生年月日</label>
          <span class="indispensable">必須</span>
        </div>
        
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>" , "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>

        <div class='register-btn'>
          <%= f.submit "会員登録" ,class:"register-red-btn" %>
        </div>
        <% end %>
    </div>
  </div>
</div>